@top Program { expression* }


expression { Identifier | Number | String | Operator | Function }

Function { "(" expression* ")" }

@skip { space }

@tokens {
  space { @whitespace+ }
  Operator { "+"|"-"|"*"|"/"|"^"|"="|"=="|"<>"|"!="|"<"|">"|"<="|">="|"&&"|"&"|"||" }
  String { '"' !["]* '"' | "'" ![']* "'" }
  Number { $[0-9]+ }
  Identifier { $[A-Za-z_.]+ }
}